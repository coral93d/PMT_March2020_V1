@model WebTimeSheetManagement.Models.LoginViewModel
@using CaptchaMvc.HtmlHelpers  
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}



<style>
    #CaptchaInputText {
        text-transform: uppercase;
    }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div style="background-image: url('/Images/abs2.jpg'); background-repeat: repeat; background-size: contain;
                                      width:117%;right:10%;position:relative;overflow:hidden;line-height:2.1085">
        <div class="container">

            <br />
            @if (ViewBag.errormessage != null)
                {
                <p class="alert alert-danger" style="width:41%;left:31%;position:relative;" id="successMessage">@ViewBag.errormessage</p>
            }

            <div class="login-panel">

                <div style="width: 260%;bottom:45px;  position: relative;">

                    <div class="col-md-5 login-form-1">
                        <div class="form-group">
                           
                            <div class="col-md-11 col-xs-12">
                                <h3>Login</h3>
                            </div>
                        </div>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">

                            <div class="col-md-12 col-xs-12">
                                @Html.LabelFor(model => model.Username)
                                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @maxlength = 20 })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-md-12 col-xs-12">
                                @Html.LabelFor(model => model.Password)
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @maxlength = 30 })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-md-12 col-xs-12">
                                <div id="captcha" class="captcha">
                                    @Html.Label("Captcha")
                                    @Html.Captcha("Refresh", "Enter the text you see above", 5, "<span class='text-danger'>Enter Captcha</span>", true)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-0 col-md-10">
                                <input id="Submit1" class="btn btn-success" type="submit" value="Sign in To Account">
                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>
    </div>
}









