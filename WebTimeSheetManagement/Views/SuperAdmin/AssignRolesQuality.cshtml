@model WebTimeSheetManagement.Models.AssignRolesModel
@{
    ViewBag.Title = "AssignRolesQuality";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}

<h4 class="page-header">AssignUsers To Quality</h4>
<br /><br />
@using (Html.BeginForm())
{


    <div class="login-container">

        @if (TempData["MessageRoles"] != null)
                {
            <p class="alert alert-success" style="width:79%" id="successMessage">@TempData["MessageRoles"] </p>
        }
        @if (TempData["MessageErrorRoles"] != null)
                {
            <p class="alert alert-danger" style="width:79%" id="successMessage">@TempData["MessageErrorRoles"] </p>
        }
        @Html.AntiForgeryToken()
        <div class="row" style="width: 99%; position: relative;">
            <div class="col-md-5 login-form-1">
                <label style="color:black">Quality</label>
                @Html.DropDownListFor(a => a.RegistrationID, new SelectList(Model.ListofQuality, "RegistrationID", "Name"), new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.RegistrationID)
            </div>


            <div id="dropdowns" class="col-md-5 login-form-2">
                <div class="login-logo">
                    <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt="" />
                </div>
                <label style="color:black">TeamLeader</label>
                @Html.DropDownListFor(a => a.Name, new SelectList(Model.ListofAdmins, "Name", "Name"), new { @class = "form-control", @name = "dropdown" })
                @Html.ValidationMessageFor(a => a.Name)


            </div>



        </div>

    </div>



            <div>

                @if (Model.ListofUser.Count() != 0)
                {
                    <div id="_panelmains" class="panel-default login-form-4">
                        <div class="panel-heading">Choose Users</div><br />
                        <div class="panel-body col-md-offset-1">
                            <div class="clearfix"></div>

                            @for (var i = 0; i < Model.ListofUser.Count(); i++)

                            {

                                <div class="col-md-4">
                                    <div>
                                        @Html.CheckBoxFor(it => Model.ListofUser[i].selectedUsers)
                                        <label>
                                            @Html.DisplayFor(it => Model.ListofUser[i].Name)
                                            @Html.HiddenFor(it => Model.ListofUser[i].RegistrationID)
                                            @Html.HiddenFor(it => Model.ListofUser[i].Name)
                                        </label>
                                    </div>
                                </div>

                            }

                            <br />&nbsp;&nbsp;<br />&nbsp;&nbsp;<br />&nbsp;&nbsp;
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-offset-4 col-md-12">
                                        <input type="submit" value="Assign Role" class="btn btn-success" />&nbsp;&nbsp;
                                        @Html.ActionLink("Cancel", "AssignRolesQuality", "SuperAdmin", null, new { @class = "btn btn-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>

}

