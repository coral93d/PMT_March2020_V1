
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}

<h4 class="page-header">Dashboard</h4>
<div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="panel" style="background-color:#f2dede">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-exclamation fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.SubmittedTimesheetCount</div>
                        <div>Pending Count!</div>
                    </div>
                </div>
            </div>
            <a target="_blank" href="/ShowAllTimeSheet/SubmittedTimeSheet">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel" style="background-color:#dff0d8">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="glyphicon glyphicon-check fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.ApprovedTimesheetCount</div>
                        <div>TimeSheet Approved Count!</div>
                    </div>
                </div>
            </div>
            <a target="_blank" href="/ShowAllTimeSheet/ApprovedTimeSheet">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel" style="background-color:#fcf8e3">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-file-text-o fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.RejectedTimesheetCount</div>
                        <div>TimeSheet Rejected Count!</div>
                    </div>
                </div>
            </div>
            <a target="_blank" href="/ShowAllTimeSheet/RejectedTimeSheet">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>

</div>

