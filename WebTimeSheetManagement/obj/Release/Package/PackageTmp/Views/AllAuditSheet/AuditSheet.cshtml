
@{
    ViewBag.Title = "AuditSheet";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}

<link href="~/Scripts/dataTablesScripts/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Scripts/dataTablesScripts/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/dataTablesScripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTablesScripts/dataTables.bootstrap4.min.js"></script>

<div class="row">
    <br />
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">All AuditSheet</div>
            <div class="panel-body">
                <table id="myTable" class="table table-striped table-bordered dt-responsive nowrap" width="100" cellspacing="0">
                    <thead>
                        <tr style="background-color:lightblue">
                            <th>Audit_MasterID</th>
                            <th>CaseID</th>
                            <th> Username</th>
                            <th>Auditor_Name</th>
                            <th>Audit_Date</th>
                            <th>Transaction_Date</th>
                            <th>Audit_Type</th>
                            <th>Final_Marks</th>
                            <th>Result</th>
                            <th>AuditSheetStatus</th>
                            <th>Activity</th>                          
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#myTable").DataTable({
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "ajax": {
               
                "url": "@Url.Action("LoadAuditSheetData", "AllAuditSheet")",
                "type": "POST",
                "datatype": "json"
            },
            "columnDefs":
            [{
                "targets": [0],
                "visible": false,
                "searchable": false
            },
              {
                  "targets": [10],
                  "searchable": false,
                  "orderable": false
              },
                {
                    "targets": [7],
                    "searchable": false,
                    "orderable": false
                },
                  {
                      "targets": [8],
                      "searchable": false,
                      "orderable": false
                  }
            ],
            "columns": [
                    { "data": "Audit_MasterID", "name": "Audit_MasterID", "autoWidth": true },
                    { "data": "Invoice_Number", "name": "Invoice_Number", "autoWidth": true },
                    { "data": "Username", "title": "Username", "name": "Username", "autoWidth": true },
                    { "data": "Auditor_Name", "name": "Auditor_Name", "autoWidth": true },
                    { "data": "Audit_Date", "name": "Audit_Date", "autoWidth": true },
                    { "data": "Transaction_Date", "name": "Transaction_Date", "autoWidth": true },
                    { "data": "Audit_Type", "name": "Audit_Type", "title": "Audit_Type", "autoWidth": true },
                    { "data": "Final_Marks", "name": "Final_Marks", "title": "Final_Marks", "autoWidth": true },
                    { "data": "Result", "name": "Result", "title": "Result", "autoWidth": true },                    
                    { "data": "AuditSheetStatus", "name": "AuditSheetStatus", "autoWidth": true },                   
                    {
                        data: null, render: function (data, type, row) {
                            if (row.AuditSheetStatus == "Submitted") {
                                return '<a class="btn btn-info"  style="width:72px;"  href="/AuditSheet/Edit/' + row.Audit_MasterID + '">Edit</a>';
                            }
                            else if (row.AuditSheetStatus == "Accepted") {                                
                                return '<a class="btn btn-info"  style="width:72px;"  href="/AllAuditSheet/Details/' + row.Audit_MasterID + '">View</a>';
                            }
                            else {                              
                                return '<a class="btn btn-warning" href="/AllAuditSheet/Edit/' + row.Audit_MasterID + '">Review</a>';
                            }
                        }
                    },
            ]
        });
    });

</script>
<script type="text/javascript">
    function DeleteData(ID) {
        if (confirm("Are you sure you want to delete ...?")) {
            DeleteSheet(ID);
        }
        else {
            return false;
        }
    }
    function DeleteSheet(ID) {
        var url = '@Url.Content("~/")' + "AuditSheet/Delete";
        $.post(url, { Audit_MasterID: ID }, function (data) {
            if (data) {
                oTable = $('#myTable').DataTable();
                oTable.draw();
            }
            else {
                alert("Something Went Wrong!");
            }
        });
    }
</script>

